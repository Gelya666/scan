<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_pdf_preview"
    android:gravity="center_vertical"
    android:padding="12dp">

    <!-- Иконка слева -->
    <ImageView
        android:id="@+id/ivPdfIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/___pngtree___no_avatar_vector_isolated_on_4979074_2"
        android:layout_marginEnd="12dp" />

    <!-- Текст справа -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPdfName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фото 10.12 (.)(.)"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhotoCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 фото 8====D"
            android:textSize="12sp"
            android:textColor="@color/color_primary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvPdfDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.12.2023 15:30 (_._)"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>