<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Доступ к внутреннему кэш-каталогу приложения -->
    <cache-path name="internal_cache" path="/" />

    <!-- Доступ к внешнему кэш-каталогу приложения -->
    <external-cache-path name="external_cache" path="/" />

    <!-- Доступ к файлам в папке files внутри внутренней памяти -->
    <files-path name="internal_files" path="/" />

    <!-- Доступ к файлам в папке files на внешней памяти -->
    <external-files-path name="external_files" path="/" />

    <!-- Доступ к общедоступным медиа-файлам -->
    <external-files-path
        name="my_images"
        path="Pictures/" />

    <!-- Для временных файлов в кэше -->
    <cache-path
        name="my_cache"
        path="/" />

    <!-- Дополнительно: для доступа к DCIM папке -->
    <external-files-path
        name="my_dcim"
        path="DCIM/" />

</paths>